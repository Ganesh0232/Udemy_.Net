@page "/Shoppinglist"

@* @page = Route to our page*@

@using FirstBlazorApp.Data

<h3>ShoppingList</h3>


<input placeholder="Grocery Name" @bind="groceryName"/>
<input placeholder="Price " @bind="groceryPrice" />
<button @onclick="AddGrocery">Add grocery to the cart</button>

<table class="table table-sm">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th></th>
    </tr>
    @foreach(var grocery in groceries)
    {
        <Item GroceryItem="@grocery"  OnGroceryPriceIncreased="OnGroceryPriceIncreased" />
    }

</table>


@*<h1>Total : @groceries.Sum(grocery => grocery.Price) rupees Only/-</h1>*@
<h1>Total : @sum rupees Only/-</h1>


@code {
    private float sum = 0;
    private List<Grocery> groceries = new();

    private string groceryName;
    private float groceryPrice;
    private void AddGrocery()
    {
        if(!string.IsNullOrWhiteSpace(groceryName) && groceryPrice > 0)
        {
            groceries.Add(new Grocery
            {
                Name= groceryName,
                Price = groceryPrice

            });
            //   sum += groceryPrice;
            groceryName = "u name it , we will get it for u";
            groceryPrice = 0;

        }
        UpdateTotalAmount();
    }
    public void UpdateTotalAmount()
    {
        sum = groceries.Sum(x => x.Price);
    }
    public void OnGroceryPriceIncreased()
    {
        UpdateTotalAmount();
    }
}
